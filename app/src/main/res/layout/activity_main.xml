<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.therdsak.calculator1.MainActivity"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.33">

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


    </LinearLayout>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <Button
            android:id="@+id/Buttonnumber07"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="7"
            android:onClick="ButtonClickHandler7"
            />
        <Button
            android:id="@+id/Buttonnumber08"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="8"
            android:onClick="ButtonClickHandler8"
            />
        <Button
            android:id="@+id/Buttonnumber09"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="9"
            android:onClick="ButtonClickHandler9"
            />
        <Button
            android:id="@+id/ButtonSysbolDivide"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="/"
            android:onClick="ButtonClickHandlerDiv"
            />


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/Buttonnumber04"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="4"
            android:onClick="ButtonClickHandler4"
            />
        <Button
            android:id="@+id/Buttonnumber05"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="5"
            android:onClick="ButtonClickHandler5"
            />
        <Button
            android:id="@+id/Buttonnumber06"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="6"
            android:onClick="ButtonClickHandler6"
            />
        <Button
            android:id="@+id/ButtonSysbolMultiphy"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="*"
            android:onClick="ButtonClickHandlerMul"
            />


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/Buttonnumber01"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="1"
            android:onClick="ButtonClickHandler1"
            />
        <Button
            android:id="@+id/Buttonnumber02"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="2"
            android:onClick="ButtonClickHandler2"
            />
        <Button
            android:id="@+id/Buttonnumber03"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="3"
            android:onClick="ButtonClickHandler3"
            />
        <Button
            android:id="@+id/ButtonSymbolSubtract"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="-"
            android:onClick="ButtonClickHandlerSub"
            />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/Buttonnumber00"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="0"
            android:onClick="ButtonClickHandler0"
            />
        <Button
            android:id="@+id/Buttonnumberreset"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="c"
            android:onClick="ButtonClickHandlerreset"
            />
        <Button
            android:id="@+id/Buttonnumberexe"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="="
            android:onClick="ButtonClickHandlerCal"
            />
        <Button
            android:id="@+id/ButtonSysbolAdd"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="+"
            android:onClick="ButtonClickHandlerAdd"
            />

    </LinearLayout>



</LinearLayout>

